{
  "name": "testudo-helper",
  "version": "1.0.0",
  "description": "Scrapes useful data (e.g. class schedule) from testudo.umd.edu",
  "main": "dist/index.js",
  "author": "Don Isaac",
  "license": "MIT",
  "private": false,
  "module": "dist/index.js",
  "scripts": {
    "": "=============================== BUILD ===============================",
    "build": "webpack --cache --output-pathinfo",
    "build:dev": "yarn build --mode development",
    "build:test": "yarn build",
    "build:prod": "yarn build --mode production",
    "-": "============================== WATCH ===============================",
    "watch": "yarn build -w",
    "watch:dev": "yarn build:dev -w",
    "watch:test": "yarn build:test -w",
    "watch:prod": "yarn build:prod -w",
    "--": "============================= SERVE ===============================",
    "serve": "webpack-dev-server --cache --output-pathinfo --watch",
    "serve:dev": "yarn serve --debug --env development",
    "serve:test": "yarn serve --debug --env test",
    "serve:prod": "yarn serve --env production",
    "--=": "============================= UTIL ===============================",
    "test": "jest",
    "clean": "rimraf dist coverage .cache",
    "prebuild": "rimraf dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.122",
    "@types/jest": "^27.0.2",
    "@types/webpack": "^5.28.0",
    "@webpack-cli/init": "^1.1.3",
    "copy-webpack-plugin": "^9.0.1",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  }
}
